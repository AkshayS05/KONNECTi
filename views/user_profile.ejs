<link rel="stylesheet" href="/css/user_profile.css" />
<!-- it won't work without defining the route--in the main index.js-->
<img src="<%=user.avatar%>" alt="<%=user.name%>" width="100" />

<div id="user-profile">
  <% if(locals.user.id==profile_user.id){ %>
  <!-- If user matches then show the form -->
  <form
    action="/users/edit/<%=profile_user.id%>"
    enctype="multipart/form-data"
    method="POST"
    id="new-avatar-<%=profile_user.id%>"
  >
    <input
      type="text"
      name="name"
      placeholder="Enter your name"
      value="<%=profile_user.name%>"
      required
    />
    <input
      type="email"
      name="email"
      placeholder="Enter your email"
      value="<%=profile_user.email%>"
      required
    />
    <input
      type="file"
      name="avatar"
      placeholder="Profile Picture"
      id="profile-image"
    />
    <input type="submit" value="Submit" />
  </form>
  <%}else{%>
  <!-- otherwise only show the profile info -->
  <p><%=profile_user.name%></p>
  <p><%=profile_user.email%></p>

  <%}%>
</div>

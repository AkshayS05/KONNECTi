<h1>konnectI/<%=title%></h1>

<section id="feed-posts">
  <h4>Posts</h4>
  <form action="/posts/create-post" method="Post" id="new-post-form">
    <textarea
      name="content"
      cols="30"
      rows="5"
      placeholder="Type here..."
    ></textarea>
    <input type="submit" value="Post" />
  </form>
  <div id="posts-list-container">
    <ul>
      <% for(post of posts){%>
      <li>
        <p>
          <%=post.content%>
          <br>
          <%=post.user.name%></li>
        </p>
      <%}%>
    </ul>
  </div>
</section>
